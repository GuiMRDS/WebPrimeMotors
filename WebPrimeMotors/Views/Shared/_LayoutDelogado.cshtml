<!DOCTYPE html>
<html lang="pt-br" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Prime Motors</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Temas + Variáveis -->
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebPrimeMotors.styles.css" asp-append-version="true" />

    <link href="https://cdn.datatables.net/v/dt/dt-2.3.4/datatables.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100" style="background-color: var(--bg-color); color: var(--text-color);">

    <!-- Botão Tema (fixo no topo da tela) -->
    <div class="position-fixed top-0 end-0 m-3">
        <button id="themeToggle" class="btn btn-outline-secondary btn-sm shadow-sm">
            <i class="bi bi-moon"></i> Tema
        </button>
    </div>

    <header></header>

    <main role="main" class="flex-fill p-0 m-0">
        @RenderBody()
    </main>

    <footer class="text-center py-3 mt-auto"
            style="background-color: var(--card-bg); color: var(--text-color); border-top: 1px solid var(--hover-bg);">
        <div class="container">
            <p class="mb-1">
                &copy; @DateTime.Now.Year - <strong>Web Prime Motors</strong>
            </p>
            <p class="small mb-0">
                Desenvolvido por
                <a href="#" class="text-decoration-none" style="color: var(--link-color);">
                    Guilherme Marinho
                </a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Alternância do tema + salvar no localStorage
        const html = document.documentElement;
        const toggleBtn = document.getElementById("themeToggle");

        // Carregar tema salvo
        if (localStorage.getItem("theme") === "dark") {
            html.setAttribute("data-theme", "dark");
            toggleBtn.innerHTML = '<i class="bi bi-brightness-high"></i> Tema';
        }

        toggleBtn.addEventListener("click", () => {
            const current = html.getAttribute("data-theme");
            const next = current === "light" ? "dark" : "light";

            html.setAttribute("data-theme", next);
            localStorage.setItem("theme", next);

            toggleBtn.innerHTML =
                next === "light"
                    ? '<i class="bi bi-moon"></i> Tema'
                    : '<i class="bi bi-brightness-high"></i> Tema';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
