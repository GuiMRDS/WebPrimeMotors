@{
    ViewData["Title"] = "Página Inicial";
}

<section class="container py-5 homepage-wrapper">

    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10 col-md-11">

            <div class="card shadow-lg border-0 rounded-4 home-card">

                <div class="card-body p-5 text-center">

                    <h1 class="fw-bold mb-3 home-title">
                        Bem-vindo ao <span class="highlight">Web Prime Motors</span>!
                    </h1>

                    <p class="lead mb-4">
                        Sistema profissional de gestão de veículos, organizado para garantir
                        produtividade, controle e eficiência no seu dia a dia.
                    </p>

                    <hr class="home-divider" />

                    <div class="row text-center gy-4 justify-content-center">

                        <div class="col-md-4 col-sm-6">
                            <a asp-controller="Usuario" asp-action="Index" class="text-decoration-none">
                                <div class="home-item card-option">
                                    <i class="bi bi-people-fill icon-option"></i>
                                    <h5 class="fw-semibold mt-2">Usuários</h5>
                                    <p class="small mb-0">Gerencie contas e acessos</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a asp-controller="Veiculo" asp-action="Index" class="text-decoration-none">
                                <div class="home-item card-option">
                                    <i class="bi bi-truck-front-fill icon-option"></i>
                                    <h5 class="fw-semibold mt-2">Veículos</h5>
                                    <p class="small mb-0">Cadastro e gerenciamento</p>
                                </div>
                            </a>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>

</section>

<style>

    /* =============================
           ESTRUTURA PRINCIPAL
        ==============================*/
    .homepage-wrapper {
        color: var(--text-color);
    }

    .home-card {
        background: var(--card-bg);
        color: var(--text-color);
        border-radius: 18px;
        transition: 0.3s ease;
    }

    .home-title {
        color: var(--text-color);
        font-size: 2.2rem;
    }

    .highlight {
        color: var(--link-color);
    }

    .home-divider {
        border-color: var(--hover-bg);
        opacity: 0.3;
        margin-bottom: 2rem;
    }

    /* =============================
           CARDS DE ACESSO
        ==============================*/
    .card-option {
        background: var(--hover-bg);
        padding: 30px 20px;
        border-radius: 16px;
        transition: 0.25s ease-in-out;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        cursor: pointer;
    }

    .icon-option {
        font-size: 2.6rem;
        color: var(--link-color);
        transition: 0.2s;
    }

    .card-option:hover {
        background: var(--link-color) !important;
        transform: translateY(-6px);
        box-shadow: 0 6px 14px rgba(0,0,0,0.15);
        color: #fff !important;
    }

        .card-option:hover .icon-option {
            color: #fff !important;
            transform: scale(1.1);
        }

</style>
