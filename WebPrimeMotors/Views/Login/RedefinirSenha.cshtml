@model RedefinirSenhaModel
@{
    Layout = "_LayoutDelogado";
    ViewData["Title"] = "Redefinir Senha";
}

<section class="vh-100 d-flex align-items-center justify-content-center"
         style="background-color: var(--bg-color); color: var(--text-color); transition: 0.3s;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">

                <div class="card shadow-lg border-0"
                     style="background-color: var(--card-bg); color: var(--text-color); transition: 0.3s;">

                    <div class="card-body p-5">

                        <h3 class="text-center mb-4 fw-bold" style="color: var(--link-color);">
                            Redefinir Senha
                        </h3>

                        @if (TempData["MensagemErro"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0"
                                 style="background-color: var(--danger-bg); color: var(--danger-text);" role="alert">
                                @TempData["MensagemErro"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">

                            <!-- Login -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="login" style="color: var(--text-color);">
                                    Login
                                </label>
                                <input type="text" id="login" class="form-control"
                                       asp-for="Login" placeholder="Digite seu login"
                                       style="background-color: var(--input-bg); color: var(--input-text); border-color: var(--input-border);" />
                                @Html.ValidationMessageFor(x => x.Login, "", new { @class = "text-danger" })
                            </div>

                            <!-- Email -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="email" style="color: var(--text-color);">
                                    E-mail
                                </label>
                                <input type="email" id="email" class="form-control"
                                       asp-for="Email" placeholder="Digite seu e-mail"
                                       style="background-color: var(--input-bg); color: var(--input-text); border-color: var(--input-border);" />
                                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-grid gap-2">

                                <button type="submit" class="btn btn-primary btn-block"
                                        style="background-color: var(--link-color); border: none;">
                                    Enviar Senha de Redefinição
                                </button>

                                <a class="btn btn-secondary btn-block"
                                   asp-controller="Login" asp-action="Index"
                                   style="background-color: var(--hover-bg); color: var(--text-color); border: none;">
                                    Voltar
                                </a>

                            </div>

                        </form>

                    </div>

                </div>

            </div>
        </div>
    </div>

</section>
