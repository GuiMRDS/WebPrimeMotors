@model WebPrimeMotors.Models.UsuarioModel

<div class="sidebar bg-dark text-white d-flex flex-column" style="width: 250px; min-height: 100vh; font-family: 'Segoe UI', sans-serif; position: fixed; top: 0; left: 0; overflow-y: auto;">

    <div class="text-center py-4 mb-3 border-bottom border-secondary">
        <a class="text-white text-decoration-none d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Index">
            <i class="bi bi-speedometer2 fs-4 me-2"></i>
            <span class="fs-5 fw-bold">WebPrimeMotors</span>
        </a>
    </div>

    <ul class="nav nav-pills flex-column mb-auto w-100 px-2">
        <li class="nav-item mb-2">
            <a class="nav-link text-white d-flex align-items-center px-3 py-2 rounded hover-menu" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-2"></i> Página Inicial
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link text-white d-flex align-items-center px-3 py-2 rounded hover-menu" asp-controller="Usuario" asp-action="Index">
                <i class="bi bi-person me-2"></i> Cadastro de Usuários
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link text-white d-flex align-items-center px-3 py-2 rounded hover-menu" asp-controller="Veiculo" asp-action="Index">
                <i class="bi bi-truck me-2"></i> Gestão de Veículos
            </a>
        </li>
    </ul>

    <hr class="text-secondary w-100">

    @if (Model != null)
    {
        <div class="dropdown mt-auto w-100 px-3 pb-4">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-2 fs-5"></i>
                <span class="mx-1 fw-medium">Olá, @Model.Nome</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow w-100">
                <li>
                    <a class="dropdown-item d-flex align-items-center" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Criar">
                        <i class="bi bi-person-plus me-2"></i> Novo usuário...
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Usuario" asp-action="Editar">
                        <i class="bi bi-pencil-square me-2"></i> Editar
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="AlterarSenha" asp-action="Index">
                        <i class="bi bi-key me-2"></i> Alterar senha
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item d-flex align-items-center text-danger" asp-controller="Login" asp-action="Sair">
                        <i class="bi bi-box-arrow-right me-2"></i> Sair
                    </a>
                </li>
            </ul>
        </div>
    }
</div>

<style>
    .hover-menu:hover {
        background-color: #0d6efd33;
        color: #0d6efd !important;
    }

    .nav-link i {
        font-size: 1.2rem;
    }

    .dropdown-item i {
        font-size: 1rem;
    }

    main {
        margin-left: 260px;
        padding: 20px;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
