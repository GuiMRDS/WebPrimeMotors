<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Prime Motors</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Suporte ao tema -->
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebPrimeMotors.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body style="background-color: var(--bg-color); color: var(--text-color);">
    <div class="d-flex" style="min-height: 100vh;">

        <!-- SIDEBAR -->
        <div class="vh-100"
             style="width: 250px; background-color: var(--sidebar-bg); color: var(--sidebar-text);">
            @await Component.InvokeAsync("Menu")
        </div>

        <!-- ÁREA PRINCIPAL -->
        <div class="flex-grow-1 p-4"
             style="background-color: var(--bg-color); color: var(--text-color);">

            <!-- Botão de Tema -->
            <div class="d-flex justify-content-end mb-3">
                <button id="themeToggle" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-moon"></i> Tema
                </button>
            </div>

            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Alternar tema + salvar no localStorage
        const html = document.documentElement;
        const toggleBtn = document.getElementById("themeToggle");

        if (localStorage.getItem("theme") === "dark") {
            html.setAttribute("data-theme", "dark");
            toggleBtn.innerHTML = '<i class="bi bi-brightness-high"></i> Tema';
        }

        toggleBtn.addEventListener("click", () => {
            const current = html.getAttribute("data-theme");
            const next = current === "light" ? "dark" : "light";

            html.setAttribute("data-theme", next);
            localStorage.setItem("theme", next);

            toggleBtn.innerHTML =
                next === "light"
                    ? '<i class="bi bi-moon"></i> Tema'
                    : '<i class="bi bi-brightness-high"></i> Tema';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
