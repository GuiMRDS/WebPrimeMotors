@model WebPrimeMotors.Models.UsuarioModel

<div class="sidebar d-flex flex-column"
     style="width: 250px; min-height: 100vh; font-family: 'Segoe UI', sans-serif;
            position: fixed; top: 0; left: 0; overflow-y: auto;
            background-color: #000;">
    
    <!-- Logo -->
    <div class="text-center py-4 mb-3 border-bottom border-secondary">
        <a class="text-decoration-none d-flex align-items-center justify-content-center sidebar-text"
           asp-controller="Home" asp-action="Index">
            <i class="bi bi-speedometer2 fs-4 me-2 sidebar-text"></i>
            <span class="fs-5 fw-bold sidebar-text">WebPrimeMotors</span>
        </a>
    </div>

    <!-- Menu -->
    <ul class="nav nav-pills flex-column mb-auto w-100 px-2">
        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center px-3 py-2 rounded sidebar-text hover-menu"
               asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-2 sidebar-text"></i> Página Inicial
            </a>
        </li>

        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center px-3 py-2 rounded sidebar-text hover-menu"
               asp-controller="Usuario" asp-action="Index">
                <i class="bi bi-person me-2 sidebar-text"></i> Cadastro de Usuários
            </a>
        </li>

        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center px-3 py-2 rounded sidebar-text hover-menu"
               asp-controller="Veiculo" asp-action="Index">
                <i class="bi bi-truck me-2 sidebar-text"></i> Gestão de Veículos
            </a>
        </li>
    </ul>

    <hr class="text-secondary w-100">

    <!-- Dropdown usuário -->
    @if (Model != null)
    {
        <div class="dropdown mt-auto w-100 px-3 pb-4">
            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle sidebar-text"
               data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-2 fs-5 sidebar-text"></i>
                <span>Olá, @Model.Nome</span>
            </a>

            <ul class="dropdown-menu shadow"
                style="background-color: #000; color: var(--text-color); border: 1px solid var(--hover-bg);">
                <li>
                    <a class="dropdown-item sidebar-dropdown-item" asp-route-id="@Model.Id"
                       asp-controller="Usuario" asp-action="Criar">
                        <i class="bi bi-person-plus me-2"></i> Novo usuário...
                    </a>
                </li>
                <li>
                    <a class="dropdown-item sidebar-dropdown-item" asp-controller="Usuario" asp-action="Editar">
                        <i class="bi bi-pencil-square me-2"></i> Editar
                    </a>
                </li>
                <li>
                    <a class="dropdown-item sidebar-dropdown-item" asp-controller="AlterarSenha" asp-action="Index">
                        <i class="bi bi-key me-2"></i> Alterar senha
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>

                <li>
                    <a class="dropdown-item text-danger sidebar-dropdown-item"
                       asp-controller="Login" asp-action="Sair">
                        <i class="bi bi-box-arrow-right me-2"></i> Sair
                    </a>
                </li>
            </ul>
        </div>
    }
</div>

<style>
    /* Texto da sidebar controla pelo tema */
    .sidebar-text {
        color: var(--sidebar-text);
        transition: color .2s;
    }

    /* Ícones também controlados pelo tema */
    .sidebar-text i,
    .sidebar-dropdown-item i {
        color: var(--sidebar-text);
    }

    /* Hover usando cor do tema */
    .hover-menu:hover {
        background-color: var(--hover-bg);
        color: var(--link-color) !important;
    }

    .sidebar-dropdown-item:hover {
        background-color: var(--hover-bg);
        color: var(--link-color) !important;
    }
</style>
